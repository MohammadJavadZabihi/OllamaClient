<Window x:Class="OllamaClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Height="600" Width="1200"
        Background="#444444">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Background="#272727">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10">
                                <Border Background="#373737" Padding="5" CornerRadius="6">
                                    <TextBlock FlowDirection="RightToLeft" Foreground="White" Text="{Binding Content}" TextWrapping="Wrap" FontSize="18"/>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- ورودی پیام -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBox Width="700" Height="40" Style="{StaticResource textBoxStyle}" FlowDirection="RightToLeft"
                         Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}" Template="{StaticResource TextBoxTemplate}"/>
                
                <Button Style="{StaticResource buttonStyle}" Width="80" Content="ارسال" Command="{Binding SendMessageCommand}" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
